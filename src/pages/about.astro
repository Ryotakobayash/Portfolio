<style>
  .about {
    max-width: 700px;
    margin: 0 auto;
  }

  .divider {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: var(--spacing-xl) 0;
  }

  /* Hero */
  .hero {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-xl);
  }

  .avatar--large {
    width: 100px;
    height: 100px;
    font-size: 2rem;
    flex-shrink: 0;
  }

  .hero-name {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: var(--spacing-xs);
  }

  .hero-subtitle {
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-sm);
  }

  .hero-role {
    font-size: 1rem;
  }

  /* Section */
  .section-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: var(--spacing-lg);
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
  }

  .subsection-title {
    font-size: 1rem;
    font-weight: 600;
    margin: var(--spacing-lg) 0 var(--spacing-md);
  }

  /* Timeline */
  .timeline {
    padding-left: var(--spacing-lg);
    border-left: 2px solid var(--color-border);
  }

  .timeline-item {
    position: relative;
    padding-bottom: var(--spacing-lg);
  }

  .timeline-item:last-child {
    padding-bottom: 0;
  }

  .timeline-marker {
    position: absolute;
    left: calc(-1 * var(--spacing-lg) - 6px);
    top: 4px;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: var(--color-border);
    border: 2px solid var(--color-bg);
  }

  .timeline-item--active .timeline-marker {
    background-color: var(--color-accent);
  }

  .timeline-title {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: var(--spacing-xs);
  }

  .timeline-subtitle {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-xs);
  }

  .timeline-date {
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

  /* Skills */
  .skill-grid {
    display: grid;
    gap: var(--spacing-md);
  }

  .skill-item {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .skill-header {
    display: flex;
    justify-content: space-between;
    font-size: 0.875rem;
  }

  .skill-level {
    color: var(--color-text-muted);
    font-size: 0.75rem;
  }

  .skill-bar {
    height: 8px;
    background-color: var(--color-bg-secondary);
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .skill-bar__fill {
    height: 100%;
    background-color: var(--color-accent);
    border-radius: var(--radius-lg);
  }

  .tech-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-md);
  }

  .tech-card {
    background-color: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: var(--spacing-md);
  }

  .tech-card__name {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: var(--spacing-xs);
  }

  .tech-card__desc {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin-top: var(--spacing-sm);
  }

  /* Links */
  .links {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-md);
  }

  .link-item {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm) var(--spacing-md);
    background-color: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    text-decoration: none;
    color: var(--color-text);
    transition: border-color var(--transition-fast);
  }

  .link-item:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
  }
</style>
